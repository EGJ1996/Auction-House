<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -Auction House</title>
    @Styles.Render("~/Content/bootstrap2.css")
    @Styles.Render("~/Content/sidebar.css")
    @Styles.Render("~/Content/sidebar1.css")

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Scripts/JavaScript1")

</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
               
                @Html.ActionLink("AUBGAuction", "Index", "Home", null, new { @class = "navbar-brand" });
            </div>

            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
                <ul class="nav navbar-nav">
                    <li class="active">@Html.ActionLink("Home","Index","Home",null,null)</li>
                    <li>@Html.ActionLink("Items", "Index", "Items", null, null)</li>
                    @if (System.Web.HttpContext.Current.User.Identity.IsAuthenticated) { 
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Your Account<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Orders", "Personal", "Items", null, null)</li>        
                        </ul>
                    </li>
                    }
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @Html.Partial("_LoginPartial")
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
